%br/
.bs-docs-section
  .row
    .col-lg-12
      %table.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th= sort_link(@search, :result_no,'更新回', default_order: :desc)
            %th= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc)
            %th= sort_link(@search, :party_no, 'Pno', default_order: :desc)
            %th= sort_link(@search, :money, '金', default_order: :desc)
            %th= sort_link(@search, :sundries, '雑貨', default_order: :desc)
            %th= sort_link(@search, :exp, 'EXP', default_order: :desc)
            %th= sort_link(@search, :is_pk, '戦闘種別', default_order: :desc)
            %th{:colspan => "4"} 結果リンク
        %tbody
          - @incomes.each do |income|
            %tr
              %td= income.result_no
              %td= p_name_text(income.e_no, income.sub_no, income.p_name)
              %td= income.party_no
              %td= income.money
              %td= income.sundries
              %td= income.exp
              %td= income.is_pk
              %td= character_link(income.e_no, income.sub_no)
              %td= character_old_link(@last_result, income.e_no, income.sub_no, income.result_no)
              %td= battle_link(income.party_no)
              %td= battle_old_link(@last_result, income.party_no, income.result_no)
= paginate(@incomes)
