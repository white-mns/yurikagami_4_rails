<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= sort_link(@search, :result_no,'更新回', default_order: :desc) %></th>
      <th><%= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc) %></th>
      <th><%= sort_link(@search, :nickname, '通名', default_order: :desc) %></th>
      <th><%= sort_link(@search, :title, '肩書', default_order: :desc) %></th>
      <th><%= sort_link(@search, :job, '職業', default_order: :desc) %></th>
      <th><%= sort_link(@search, :tribe, '種族', default_order: :desc) %></th>
      <th><%= sort_link(@search, :sex, '性別', default_order: :desc) %></th>
      <th><%= sort_link(@search, :age, '年齢', default_order: :desc) %></th>
      <th><%= sort_link(@search, :height, '身長', default_order: :desc) %></th>
      <th><%= sort_link(@search, :weight, '体重', default_order: :desc) %></th>
      <th colspan="1">結果リンク</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.result_no %></td>
        <td><%= e_no_f_no = sprintf("%d",profile.e_no)
            if profile.sub_no > 0 then
                e_no_f_no += ", " + sprintf("%d",profile.sub_no)
            end
            profile.p_name.name.html_safe + "(" + e_no_f_no + ")" %></td>
        <td><%= profile.nickname %></td>
        <td><%= profile.title %></td>
        <td><%= profile.job %></td>
        <td><%= profile.tribe_name.name %></td>
        <td><%= profile.sex %></td>
        <td><%= profile.age %></td>
        <td><%= profile.height %></td>
        <td><%= profile.weight %></td>
        <td><%= file_name = sprintf("%d",profile.e_no)
            if profile.sub_no > 0 then
                file_name += "_" + sprintf("%d",profile.sub_no)
            end
            link_to " 結果", "http://csyuki.sakura.ne.jp/cgi-bin/prism/result/status"+file_name+".html", :target => "_blank" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
