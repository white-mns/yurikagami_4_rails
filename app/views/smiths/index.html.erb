        <td><%= source.kind_name.name if source && source.kind_name %></td>
        <td><%= source.slash   if source %></td>
        <td><%= source.charge  if source %></td>
        <td><%= source.magic   if source %></td>
        <td><%= source.guard   if source %></td>
