      <th><%= sort_link(@search, :sub_material_2_name_id, 'サブ素材2', default_order: :desc) %></th>
      <th><%= sort_link(@search, :sub_material_3_name_id, 'サブ素材3', default_order: :desc) %></th>
      <th><%= sort_link(@search, :sub_material_4_name_id, 'サブ素材4', default_order: :desc) %></th>
