  </thead>

  <tbody>
    <% @smiths.each do |smith| %>
      <tr>
        <td rowspan="2"><%= smith.result_no %></td>
        <td rowspan="2"><%= p_name_text(smith.e_no, smith.sub_no, smith.p_name) %></td>
        <td rowspan="2"><%= smith.party_no %></td>
        <td>作成</td>
        <td><%= smith.result_i_no %></td>
        <td><%= smith.result.name.html_safe if smith.result %>
            <%= "推測不可" if smith.result_i_no == 0 %>
            <%= "作成失敗" if smith.result_i_no == -1 %></td>
        <td><%= smith.result.kind_name.name if smith.result && smith.result.kind_name %></td>
        <td><%= smith.result.slash  if smith.result %></td>
        <td><%= smith.result.charge if smith.result %></td>
        <td><%= smith.result.magic if smith.result %></td>
        <td><%= smith.result.guard if smith.result %></td>
        <td><%= smith.result.protect if smith.result %></td>
        <td><%= smith.result.ability_name.name if smith.result && smith.result.ability_name %></td>
        <td><%= smith.result.prize if smith.result %></td>
        <td><%= if smith.smith_display then
                                if smith.smith_display.display_rate < 0.998 then
                                    (smith.smith_display.display_rate * 100).floor(2)
