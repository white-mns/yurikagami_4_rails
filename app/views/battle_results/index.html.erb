  <tr><td></td><td>
    <%= f.submit '検索する' %>
    </td></tr>
</tbody>
</table>
 <% end %>
   </div>
  </div>
</div>
<%= paginate(@battle_results) %><br>
ヒット数：<%= @count %>件<br><br>

<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= sort_link(@search, :result_no,'更新回', default_order: :desc) %></th>
      <th><%= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc) %></th>
      <th><%= sort_link(@search, :result_no, 'Result no', default_order: :desc) %></th>
      <th><%= sort_link(@search, :generate_no, 'Generate no', default_order: :desc) %></th>
      <th><%= sort_link(@search, :party_no, 'Party no', default_order: :desc) %></th>
      <th><%= sort_link(@search, :battle_result, 'Battle result', default_order: :desc) %></th>
      <th colspan="1">結果リンク</th>
    </tr>
  </thead>

  <tbody>
    <% @battle_results.each do |battle_result| %>
      <tr>
        <td><%= battle_result.result_no %></td>
        <td><%= e_no_f_no = sprintf("%d",battle_result.e_no)
            if battle_result.sub_no > 0 then
                e_no_f_no += ", " + sprintf("%d",battle_result.sub_no)
            end
            battle_result.p_name.name.html_safe + "(" + e_no_f_no + ")" %></td>
        <td><%= battle_result.result_no %></td>
        <td><%= battle_result.generate_no %></td>
        <td><%= battle_result.party_no %></td>
        <td><%= battle_result.battle_result %></td>
        <td><%= file_name = sprintf("%d",battle_result.e_no)
            if battle_result.sub_no > 0 then
                file_name += "_" + sprintf("%d",battle_result.sub_no)
            end
            link_to " 結果", "http://csyuki.sakura.ne.jp/cgi-bin/prism/result/status"+file_name+".html", :target => "_blank" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>
<%= paginate(@battle_results) %>
