  <tr><td><%= f.label :result_no_form, 'Result no' %></td>
    <td class="formNum"><%= text_field_tag :result_no_form, @result_no_form %></td></tr>
  <tr><td><%= f.label :generate_no_form, 'Generate no' %></td>
    <td class="formNum"><%= text_field_tag :generate_no_form, @generate_no_form %></td></tr>
